{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/crutchcorn/sync-skeleton.git"
  },
  "packageManager": "pnpm@10.16.1",
  "type": "module",
  "scripts": {
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version && pnpm install --no-frozen-lockfile && pnpm prettier:write",
    "clean": "pnpm --filter \"package/**\" run clean",
    "preinstall": "node -e \"if(process.env.CI == 'true') {console.log('Skipping preinstall...')} else {process.exit(1)}\" || npx -y only-allow pnpm",
    "test": "pnpm run test:ci",
    "test:pr": "nx affected --targets=test:sherif,test:knip,test:build,build",
    "test:ci": "nx run-many --targets=test:sherif,test:knip,test:build,build",
    "test:format": "pnpm run prettier --check",
    "test:sherif": "sherif",
    "test:build": "nx affected --target=test:build --exclude=example",
    "test:knip": "knip",
    "build": "nx affected --target=build --exclude=example",
    "build:all": "nx run-many --target=build --exclude=example",
    "watch": "pnpm run build:all && nx watch --all -- pnpm run build:all",
    "dev": "pnpm run watch",
    "prettier": "prettier --ignore-unknown . --check",
    "prettier:write": "pnpm run prettier --write",
    "cipublish": "node scripts/publish.ts"
  },
  "nx": {
    "includedScripts": [
      "test:knip",
      "test:sherif"
    ]
  },
  "devDependencies": {
    "@tanstack/config": "0.20.1",
    "@types/node": "^24.5.2",
    "knip": "^5.63.1",
    "nx": "21.5.2",
    "premove": "^4.0.0",
    "prettier": "^3.6.2",
    "publint": "^0.3.13",
    "sherif": "^1.6.1"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.7",
    "@svitejs/changesets-changelog-github-compact": "^1.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
